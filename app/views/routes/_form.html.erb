<%= form_for(@route) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.label "title" %><br />
    <%= f.text_field :title %><br />
	<%= f.label "description" %><br />
    <%= f.text_field :description %><br />
	<%= f.label "map" %><br />
	<%= f.text_field :map %><br />
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>