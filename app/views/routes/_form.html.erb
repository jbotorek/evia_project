<%= form_for(@route) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
        <%= f.label "title" %>    
        <%= f.text_field :title %><br />
        <%= f.label "description" %>
        <%= f.text_area :description %><br />
        <%= f.label "map" %>  
        <%= f.text_field :map %><br />
        <fieldset>
            <legend>Choose route's type</legend>
              <% @types.each do |type| %>
                    <%= check_box_tag 'type_ids[]', type.id -%>
                    <%= h type.title -%><br />
              <% end %>
        </fieldset>
    </div>
    <div class="actions">
		<%= f.submit %>
    </div>
  
<% end %>