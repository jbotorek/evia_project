<li>	There is <%= @route.commenters.count %> comments for this route <br>	CHECK : <%=  @allcomments.count %>	<ul class="comments">	  <% @allcomments.each do |comment| %>		<li>			<p><%= comment.created_at %> comment: <%=comment.text%> <br>			FROM: <%= get_user(comment.commenter_id)[0]["email"]%>		<br>			<% if current_user.email == get_user(comment.commenter_id)[0]["email"] %>				<%= link_to 'REMOVE COMMENT', {:controller => 'route_comment_relationships',				:action => 'destroy', :id => comment.id, :route_id => @route.id }, :confirm => 'Are you sure?', :method=>:delete %>			<% end %>			</p>		  		</li>	  <% end %>	</ul>	</li>