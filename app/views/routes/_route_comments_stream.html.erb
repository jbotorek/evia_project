There is <%= @route.commenters.count %> comments for this route <br>	<div class="comments_stream">	  <% @allcomments.each do |comment| %>        <div class="comment">            <% user = get_user(comment.commenter_id)[0] %>            <% if current_user.email == user["email"] %>                <div class="comment_controls">                    <%= link_to 'x', {:controller => 'route_comment_relationships',                :action => 'destroy', :id => comment.id, :route_id => @route.id }, :confirm => 'Are you sure?', :method=>:delete %>                </div>            <% end %>            <div class="comment_created"><%= comment.created_at %></div>            <div class="comment_author clear"><%= link_to user["email"], :controller => "users", :action => "show", :id => user["id"] %></div>            <div class="comment_body"><%=comment.text%></div>        </div>        <% if comment!=@allcomments.last %>        <hr />        <% end %>	  <% end %></div>