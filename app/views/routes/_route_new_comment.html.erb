<%= form_for(@comment) do |f| %>  <%= render 'shared/error_messages', object: f.object %>  <div class="field">  	<%= hidden_field_tag :commenter_id, :value => current_user.id %>		<%= hidden_field_tag :route_id, :value => @route.id %>    <%= f.text_area :text, :size => "30x5", placeholder: "Compose new comment..." %>  </div>  <%= f.submit "Post"%><% end %>