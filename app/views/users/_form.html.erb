<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages' %>

  <div class="field">
    <%= f.label "email" %><br />
    <%= f.text_field :email %><br />
	<%= f.label "heslo" %><br />
    <%= f.password_field :password %><br />
	<%= f.label :password_confirmation, "Confirmation" %><br />
	<%= f.password_field :password_confirmation %><br />
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
