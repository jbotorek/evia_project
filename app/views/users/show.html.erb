<p id="notice"><%= notice %></p>


<% content_for :summary do %>
    <% provide(:title, @user.email) %>
    <div class="visit_card summary_part">
          <h1>
            <%= @user.email %>
          </h1>	
          <% if @info==nil %>
             <span> PERSONAL INFO NOT YED PROVIDED </span>
          <% else %>
             <span> name: <%= @info.name %> <%= @info.surname %> </span>
             <span> address: <%= @info.town %>, <%= @info.street %> </span>
          <% end %>
          
          <%= gravatar_for @user %>
    </div>
    <div class="clear">
      <%= render 'shared/stats' %>
    </div>
    
   
    <span>
    <%= render 'follow_form' if signed_in? %>  SLEDUJES?
    </span>
<% end %>
<% content_for :showcase do %> 
    <div>
      <h3>User's showcase</h3>
      <%= render 'shared/showcase', collection: @showcase_items %>
    </div>
<% end %>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
