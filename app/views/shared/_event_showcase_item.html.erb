	<div class="showcase_controls">
		<% if current_user?(@temp_event.user) %>
				<%= link_to "x", @temp_event, method: :delete,
											 data: { confirm: "You sure?" },
											 title: "delete event" %>
		<% end %>
	</div>
   
	<div class="showcase_user">
	  <%= link_to @temp_event.user.email, @temp_event.user%>
	</div>
	<div class="showcase_body">
        <%= link_to gravatar_for(@temp_event.user), @temp_event.user %>
		New <b>EVENT</b> created:
		<% text = @temp_event.title + " on: "  + @temp_event.time.strftime("%d.%m.%Y")%> 
		<%= link_to text, @temp_event%>
	</div>
	<div class="showcase_props">
		 <%= link_to @temp_event.attendees.count.to_s + " attend",
				:controller => :users, :action => :attendees, :event_id => @temp_event.id %>
	</div>
    <div class="showcase_log">
		Posted <%= time_ago_in_words(@temp_event.created_at) %> ago.
	</div>
	