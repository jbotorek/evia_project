    <div class="showcase_controls">
        <% if current_user?(@temp_route.user) %>
            <%= link_to "x", @temp_route, method: :delete,
                                             alt: "delete",
                                             data: { confirm: "You sure?" },
                                             title: "delete route" %>
        <% end %>
    </div>
    <div class="showcase_user">
      <%= link_to @temp_route.user.email, @temp_route.user%>
    </div>
    <div class="showcase_body">
        <%= link_to gravatar_for(@temp_route.user), @temp_route.user %>
        New <b>ROUTE</b> created:
		<% text = @temp_route.title+ " - " + @temp_route.description %>
        <%= link_to text, @temp_route %>
    </div>
    <div class="showcase_props">
        <span class='half_horizontally'>
				<%= link_to @temp_route.wanters.count.to_s + " want to try",
				:controller => :users, :action => :allwanters, :route_id => @temp_route.id %>
		</span>
        <span class='half_horizontally'>
			<%= link_to @temp_route.triers.count.to_s + " already tried",
				:controller => :users, :action => :alltriers, :route_id => @temp_route.id %>
		</span>
    </div>
    <div class="showcase_log">
        <span>Posted <%= time_ago_in_words(@temp_route.created_at) %> ago.</span>
    </div>
    
