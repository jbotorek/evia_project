<%= form_for(@event) do |e| %>
  <div class="errors">
	<%= render 'shared/error_messages', object: e.object %>
  </div>
  
  <div class="field">
    <%= e.label "title" %><br />
    <%= e.text_field :title %><br />
	<%= e.label "description" %><br />
    <%= e.text_area :description %><br />
	<%= e.label "date" %><br />
	<%= e.text_field :time %><br />
	<%= e.label "time" %> <br />
	<%= e.time_select :hour %><br />
	<%= e.label "Select route for your event:" %><br />	
	<%= e.collection_select(:route_id, @routes, :id, :title) %><br />
	<fieldset>
		<legend>Choose event's type</legend>
		  <% i = 1 %>
		  <% @types.each do |item| %>
			<%= e.radio_button :event_type_id, item.id %> 
			<%= image_tag("ActivityTypesIcons/"+i.to_s+".png", :size => "36x36", :alt => item.title) %>
			<%= item.title %><br />
			<% i = i+1 %>
		  <% end %>
	</fieldset>	
  </div>
  <div class="actions">
    <%= e.submit "Create the event", :class => 'action_button'%>
  </div>
<% end %>